<div class="row">
  <div class="col-md-1">
  </div>
  <div class="col-md-10">
    <i class="material-icons md-48 icon-title">credit_card</i>
    <label class="label-title">Operadora de Cartões</label>
  </div>
</div>
<div class="row">
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-10 div-inter">
        <br>
        <div class="form-group">
          <%= link_to new_card_operator_path, class: "btn btn-info btn-sm " do %>
              Cadastrar
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
          <div class="col-md-1">
          </div>
          <div class="col-md-10 div-inter">
            <p id="notice"><%= notice %></p>
            <table class="table table-bordered table-striped">
              <thead class="head-table">
                <tr>
                  <th>Nome</th>
                  <th>Eventos</th>
                </tr>
              </thead>

              <tbody>
                <% @card_operators.each do |card_operator| %>
                    <tr class="<%= cycle("warning", "danger") -%>">
                    <td><%= card_operator.name %></td>
                    <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-info dropdown-toggle btn-sm btn-clips" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Opções <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu">
                            <li><%= link_to 'Editar',   edit_card_operator_path(card_operator),class: "btn btn-info btn-sm "%></li>
                            <li role="separator" class="divider"></li>
                            <li><%= link_to 'Excluir', delete_card_operator_logic_path(id: card_operator),class: "btn btn-danger btn-sm ", method: :get, data: { confirm: 'Confirma a Exclusão?' } %></li>
                          </ul>
                        </div>
                    </div>

                    </td>
                  </tr>
                </tbody>
                <% end %>
            </table>
          </div>
        </div>

    </div>
<div>
</div>


