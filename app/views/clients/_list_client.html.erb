<div class="col-md-12">
        <table class="table table-bordered table-striped">
          <thead class="head-table">
            <tr>
              <th>Nome</th>
              <th>Cpf</th>
              <th>Telefone <i class="material-icons md-18 icon-title">call</i></th>
              <th>Eventos</th>
            </tr>
          </thead>

          <tbody>
            <% @clients.each do |client| %>
                <tr class="<%= cycle("warning", "danger") -%>">
                <td><%= client.name %></td>
                <td><%= number_with_delimiter(client.cpf, delimiter: ".") %></td>
                <td><%= number_to_phone(client.fone) %></td>
                <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-info dropdown-toggle btn-sm btn-clips" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Opções <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu">
                        <li><%= link_to 'Editar',   edit_client_path(client),class: "btn btn-info btn-sm "%></li>
                        <li role="separator" class="divider"></li>
                        <li><%= link_to 'Excluir', client,class: "btn btn-danger btn-sm ", method: :delete, data: { confirm: 'Confirma a Exclusão?' }%></li>
                        <li role="separator" class="divider"></li>
                        <li><button type="button" name="btn_confirm_client" id="<%= client.id %>" class="btn_confirm_client btn btn-primary btn-sm btn-block" >Confirmar</li>
                      </ul>
                    </div>
                </div>

                </td>
              </tr>
            </tbody>
            <% end %>
        <!-- </table> -->
</div>
