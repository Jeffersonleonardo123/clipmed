<div class="col-lg-12">
    <div class="col-lg-1">
    </div>
    <div class="col-lg-10">

        <p id="notice"><%= notice %></p>


        <div class="row">
            <div class="col-md-10"><h1>Pacientes</h1>
            </div>
            <div class="col-md-2">
              <%= link_to 'Novo Paciente', new_client_path,:class =>'btn btn-primary' %>
            </div>
        </div>
        <br>

        <table class="table table-striped">
          <thead>
            <tr>
            </tr>
          </thead>

          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td>


                    <div class="panel panel-primary">
                       <div class="panel-heading">
                          <h3 class="panel-title"><%= client.name %></h3>
                        </div>
                      <div class="panel-body">
                          <ul class="list-group">
                              <li class="list-group-item">
                                <div class="row">
                                  <div class="col-md-6">
                                    @ E-mail: <%= client.email %>
                                  </div>
                                  <div class="col-md-3">
                                    Celular: <%= number_to_phone(client.celular) %>
                                  </div>
                                  <div class="col-md-3">
                                    Telefone: <%= number_to_phone(client.fone) %>
                                  </div>
                                </div>
                              </li>
                              <li class="list-group-item list-group-item-info">
                                <div class="row">
                                    <div class="col-md-5">
                                      Endereço: <%= client.address %>
                                    </div>
                                    <div class="col-md-2">
                                      Numero: <%=client.number %>
                                    </div>
                                    <div class="col-md-5">
                                      Bairro: <%= client.neighborhood %>
                                    </div>
                                </div>
                              </li>
                              <li class="list-group-item">
                                 <div class="row">
                                    <div class="col-md-10">
                                      Profissional: <%= client.professional.name %>
                                    </div>
                                  </div>
                              </li>
                              <li class="list-group-item list-group-item-info">
                                <div class="row">
                                    <div class="col-md-12">
                                      Observações: <%= client.observation %>
                                    </div>
                                </div>
                              </li>
                          </ul>

                        <div class="row">
                              <div class="col-md-5">
                                <%= link_to 'Editar', edit_client_path(client),{:class =>'btn btn-primary'}%>

                                <%= link_to 'Excluir', client,:class =>'btn btn-danger', method: :delete, data: { confirm: 'Confirma a Exclusão?' }%>
                              </div>
                              <div class="col-md-5"></div>
                              <div class="col-md-2"></div>
                        </div>
                      </div>
                    </div>
                </td>

              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
    <div class="col-lg-1">
    </div>
<div>
