<div class="col-md-4">

</div >
<div class="col-md-4 div-inter">
  <%= form_tag(save_new_password_path) do%>
    <input type="hidden" name="user_id" value="<%=@user.id%>">
    <div class="row">
        </br>
    </div>
    <div class="row ">
      <div class="field" >
        <div class="input-group">
          <span class="input-group-addon">@</span>
          <input type="text" class="form-control" value="<%=@user.email%>">
        </div>
      </div>
      <div class="field" >
        <div class="input-group">
          <span class="input-group-addon">Nova Senha</span>
          <input type="password" class="form-control" id="new_password" name="new_password">
        </div>
      </div>
      <div class="field" >
        <div class="input-group">
          <span class="input-group-addon">Confirme a Senha</span>
          <input type="password" class="form-control" id="confirm_password" name="confirm_password">
        </div>
      </div>
    </div>
    <div class="row">
      <br>
      <div class="form-group">
        <div class="col-md-6">
          <%= button_tag('Confirmar', type: 'submit',class: "btn btn-primary btn-block  btn-sm") %>
        </div>
        <div class="col-md-6">
          <%= link_to 'Cancelar',  root_path,{:class =>"btn btn-danger btn-block  btn-sm"}%>
        </div>
      </div>
      <br>
      <br>
    </div>


  <% end %>
</div>
<div class="col-md-4">

</div>
